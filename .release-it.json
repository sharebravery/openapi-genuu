{
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
        "publish": true
      },
      "hooks": {
        "after:bump": "echo 更新版本成功"
      },
    "plugins": {
        "@release-it/conventional-changelog": {
          "preset": "angular",
          "infile": "CHANGELOG.md"
        }
    }      
  }